{
  "name": "RTL_433 US (915 MHz + Multi)",
  "version": "0.3.7",
  "slug": "rtl433-us",
  "description": "Modern rtl_433 add-on â€“ US 915 MHz focus, frequency hopping, multi-dongle, MQTT auto-discovery",
  "url": "https://github.com/jb9485/hass-rtl433-us",
  "arch": ["aarch64", "amd64", "armv7", "armhf"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "host_network": true,
  "devices": [
    "/dev/bus/usb:/dev/bus/usb:rwm"
  ],
  "map": [
    "ssl:rw"
  ],
  "options": {
    "devices": [
      {
        "frequency": 915000000,
        "sample_rate": 1000000,
        "gain": 45,
        "ppm": 0,
        "label": "915 MHz US"
      },
      {
        "frequency": 433920000,
        "sample_rate": 250000,
        "gain": 40,
        "ppm": 0,
        "label": "433 MHz fallback"
      }
    ],
    "mqtt": {
      "host": "core-mosquitto",
      "port": 1883,
      "user": "",
      "pass": "",
      "topic": "rtl_433",
      "retain": false
    },
    "hop_interval": 0.8
  },
  "schema": {
    "devices": [
      {
        "frequency": "int(100000000,1000000000)",
        "sample_rate": "list(250000|1000000|2000000)",
        "gain": "int(0,60)",
        "ppm": "int(-200,200)",
        "label": "str"
      }
    ],
    "mqtt": {
      "host": "str",
      "port": "port?",
      "user": "str?",
      "pass": "password?",
      "topic": "str?",
      "retain": "bool?"
    },
    "hop_interval": "float(0.1,10)?"
  },
  "image": "ghcr.io/jb9485/rtl433-us-{arch}"
}